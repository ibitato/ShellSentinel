{
  "terminal": {
    "allowed_terms": ["xterm", "xterm-256color"],
    "warning_message": "{{terminal.warning_message}}",
    "warning_icon": "⚠️",
    "unknown_label": "{{terminal.unknown_label}}",
    "detected_label": "{{terminal.detected_label}}"
  },
  "ui": {
    "history_limit": 200,
    "output_panel": {
      "title": "{{ui.output_panel.title}}",
      "border_style": "#FF8C00",
      "text_style": "#FFB347",
      "background": "#000000",
      "initial_markdown": "{{ui.output_panel.initial_markdown}}",
      "placeholder_response_markdown": "{{ui.output_panel.placeholder_response}}"
    },
    "user_panel": {
      "title": "{{ui.user_panel.title}}",
      "border_style": "#00FF7F",
      "text_style": "#7CFC00"
    },
    "connection_panel": {
      "title": "{{ui.connection_panel.title}}",
      "border_style": "#FF8C00",
      "text_style": "#FFB347",
      "background": "#000000"
    },
    "input_widget": {
      "placeholder": "{{ui.input_widget.placeholder}}",
      "background": "#001900",
      "text_style": "#7CFC00",
      "submit_binding": "ctrl+s",
      "min_lines": 3,
      "max_lines": 9,
      "padding": "1 2"
    },
    "dialogs": {
      "exit": {
        "title": "{{ui.dialogs.exit.title}}",
        "message": "{{ui.dialogs.exit.message}}",
        "confirm_label": "{{ui.dialogs.exit.confirm}}",
        "cancel_label": "{{ui.dialogs.exit.cancel}}",
        "prompt_markdown": "{{ui.dialogs.exit.prompt_markdown}}"
      }
    }
  },
  "shortcuts": {
    "exit": {
      "binding": "ctrl+c",
      "description": "{{shortcuts.exit.description}}"
    }
  },
  "logging": {
    "level": "DEBUG",
    "directory": "logs",
    "filename": "app.log",
    "format": "%(asctime)s [%(levelname)s] %(name)s - %(message)s",
    "when": "midnight",
    "interval": 1,
    "backup_count": 3,
    "log_to_console": false
  }
}
