{
  "version": 1,
  "provider": "bedrock",
  "agent": {
    "streaming": true,
    "conversation": {
      "strategy": "sliding_window",
      "window_size": 40,
      "truncate_tool_results": true
    },
    "trace_attributes": {
      "app": "Almost Human Sys Admin"
    }
  },
  "providers": {
    "bedrock": {
      "system_prompt": "system_prompts/bedrock.md",
      "model_id": "us.anthropic.claude-sonnet-4-20250514-v1:0",
      "region_name": "us-east-1",
      "show_thinking": false,
      "client": {
        "profile": null,
        "endpoint_url": null
      },
      "params": {
        "temperature": 0.3,
        "top_p": 0.8,
        "max_tokens": 32768,
        "streaming": true
      }
    },
    "openai": {
      "system_prompt": "system_prompts/openai.md",
      "model_id": "gpt-4o",
      "show_thinking": false,
      "client_args": {
        "api_key_env": "OPENAI_API_KEY",
        "organization": null,
        "base_url": "https://api.openai.com/v1"
      },
      "params": {
        "temperature": 1,
        "max_completion_tokens": 32768
      }
    },
    "local": {
      "system_prompt": "system_prompts/local.md",
      "host": "http://localhost:11434",
      "model_id": "llama3.1",
      "show_thinking": false,
      "params": {
        "temperature": 0.6,
        "keep_alive": "10m",
        "top_p": 0.9
      }
    }
  },
  "tools": {
    "default": [
      "shell",
      "file_read",
      "file_write",
      "sleep"
    ],
    "remote_command": {
      "name": "remote_ssh_command",
      "timeout_seconds": 120
    },
    "load_directory": false,
    "consent": {
      "bypass": true
    }
  },
  "mcp": {
    "enabled": false,
    "load_server_tools": true,
    "transports": [
      {
        "id": "docs-stdio",
        "type": "stdio",
        "command": "uvx",
        "args": [
          "awslabs.aws-documentation-mcp-server@latest"
        ],
        "env": {},
        "cwd": null,
        "timeout_seconds": 30
      },
      {
        "id": "local-sse",
        "type": "sse",
        "url": "http://localhost:8000/sse",
        "headers": {},
        "timeout_seconds": 30
      },
      {
        "id": "local-streamable-http",
        "type": "streamable_http",
        "url": "http://localhost:8000/mcp",
        "headers": {},
        "timeout_seconds": 30
      }
    ]
  }
}
